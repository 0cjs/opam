if build_libs = [] ||
   %mem( string = "opam-format"
         strings = build_libs )
then {
begin library "opam-format"
  sort = false
  files   = [
    "opamFormatConfig.ml"
    "opamSwitch.ml"
    "opamPackage.ml"
    "opamFormula.ml"
    "opamVariable.ml"
    "opamRepositoryName.ml"
    "opamTypes.mli"
    "opamTypesBase.ml"
    "opamPp.ml"
    "opamFormat.ml"
    "opamLineLexer.mll"
    "opamFilter.ml"
    "opamFile.ml"
  ]

  requires = [
    "opam-file-format"
    "opam-core"
    "re.pcre"
  ]

end
}
